@model IEnumerable<UploadFile>

@{
    ViewData["Title"] = "アップロードファイル一覧";
}

<h2 class="pb-2 mb-4 border-bottom">@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.FileName)</th>
            <th>@Html.DisplayNameFor(model => model.ContentType)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Id)</td>
                <td>@Html.DisplayFor(_ => item.FileName)</td>
                <td>@Html.DisplayFor(_ => item.ContentType)</td>
            </tr>
        }
    </tbody>
</table>
